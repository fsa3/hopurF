        <TextField fx:id="ssTextField" layoutX="32.0" layoutY="151.0" promptText="Kennitala" />
        <CheckBox fx:id="luggage" layoutX="384.0" layoutY="56.0" mnemonicParsing="false" text="Farangur" />
        <TextField fx:id="emailTextField" layoutX="32.0" layoutY="200.0" promptText="Netfang" />
        <CheckBox fx:id="foodCheck" layoutX="384.0" layoutY="85.0" mnemonicParsing="false" text="Matur" />
        <CheckBox fx:id="wheelchairCheck" layoutX="384.0" layoutY="113.0" mnemonicParsing="false" text="Hjólastóll" />
        <TextArea fx:id="healthIssues" layoutX="382.0" layoutY="246.0" prefHeight="65.0" prefWidth="142.0" promptText="Önnur heilsufarsvandamál" />
